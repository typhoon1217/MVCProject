package main;

import controller.DBUtill;
import controller.ServerUtill;

public class SrestMain {
	public static void main(String[] args) {
		// 메뉴화면함수
		//mainMenu();
		//DBUtill.makeConnection();
		ServerUtill.startServer();
		loginProcess(); //시작 서버당 스레드에 로그인을 하고싶어 나뉜 스레드로 추후 처리도 하고싶어
		System.out.println("The end");
	}

    private static void loginProcess() {
        // 로그인 정보를 받아오는 작업을 수행합니다.
        // 예를 들어, 사용자 이름과 비밀번호를 입력 받는 창을 표시하고, 그 정보를 서버에 전달하여 인증을 수행합니다.
        // 이 예제에서는 간단히 콘솔에서 사용자 이름과 비밀번호를 입력 받는 것으로 대체합니다.
        Scanner scanner = new Scanner(System.in);
        System.out.println("사용자 이름을 입력하세요: ");
        String username = scanner.nextLine();
        System.out.println("비밀번호를 입력하세요: ");
        String password = scanner.nextLine();

        // 이제 username과 password를 서버로 전달하고, 서버에서는 이를 검증하고 인증을 수행합니다.
        // 이 부분은 클라이언트와 서버 간의 통신을 사용하여 구현됩니다.
        // 실제로는 네트워크 통신이 필요하며, 이를 위해서는 소켓 프로그래밍이나 HTTP 통신 등을 사용해야 합니다.
    }
}
